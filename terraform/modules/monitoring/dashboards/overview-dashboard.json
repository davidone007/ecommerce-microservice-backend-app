{
  "id": null,
  "uid": "micro-overview-enhanced",
  "title": "Microservices - Overview (Enhanced)",
  "tags": [
    "microservices",
    "overview"
  ],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "service",
        "label": "Service",
        "datasource": "Prometheus",
        "query": "label_values(job)",
        "multi": true,
        "includeAll": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 1
      },
      "type": "row",
      "title": "System Health Overview",
      "collapsed": false
    },
    {
      "id": 2,
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "type": "stat",
      "title": "Total Requests/s",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 50,
                "color": "yellow"
              },
              {
                "value": 100,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "x": 4,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "type": "stat",
      "title": "Error Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(http_server_requests_seconds_count{job=~\"$service\",status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": {
        "x": 8,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "type": "stat",
      "title": "Avg Response Time",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "1000 * sum(rate(http_server_requests_seconds_sum{job=~\"$service\"}[5m])) / sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 200,
                "color": "yellow"
              },
              {
                "value": 500,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "gridPos": {
        "x": 12,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "type": "stat",
      "title": "Success Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(http_server_requests_seconds_count{job=~\"$service\",status=~\"2..\"}[5m])) / sum(rate(http_server_requests_seconds_count{job=~\"$service\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 95,
                "color": "yellow"
              },
              {
                "value": 99,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "gridPos": {
        "x": 16,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "type": "stat",
      "title": "Active Instances",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "count(up{job=~\"$service\"} == 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "gridPos": {
        "x": 20,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "type": "stat",
      "title": "Total Memory Used",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{job=~\"$service\",area=\"heap\"}) / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1000,
                "color": "yellow"
              },
              {
                "value": 2000,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 1
      },
      "type": "row",
      "title": "Performance Metrics by Service",
      "collapsed": false
    },
    {
      "id": 11,
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "title": "Request Rate by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\"}[1m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 12,
      "gridPos": {
        "x": 12,
        "y": 6,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "title": "P95 Latency by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=~\"$service\"}[5m])) by (le, job)) * 1000",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 13,
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "title": "Error Rate by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\",status=~\"5..\"}[5m])) / sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 14,
      "gridPos": {
        "x": 12,
        "y": 14,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "title": "Success Rate by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\",status=~\"2..\"}[5m])) / sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 20,
      "gridPos": {
        "x": 0,
        "y": 22,
        "w": 24,
        "h": 1
      },
      "type": "row",
      "title": "Resource Usage",
      "collapsed": false
    },
    {
      "id": 21,
      "gridPos": {
        "x": 0,
        "y": 23,
        "w": 8,
        "h": 8
      },
      "type": "timeseries",
      "title": "CPU Usage by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum by (job) (rate(process_cpu_seconds_total{job=~\"$service\"}[1m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 22,
      "gridPos": {
        "x": 8,
        "y": 23,
        "w": 8,
        "h": 8
      },
      "type": "timeseries",
      "title": "Memory Usage by Service (Heap)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (jvm_memory_used_bytes{job=~\"$service\",area=\"heap\"}) / 1024 / 1024",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 23,
      "gridPos": {
        "x": 16,
        "y": 23,
        "w": 8,
        "h": 8
      },
      "type": "timeseries",
      "title": "Thread Count by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (jvm_threads_live_threads{job=~\"$service\"})",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 30,
      "gridPos": {
        "x": 0,
        "y": 31,
        "w": 24,
        "h": 1
      },
      "type": "row",
      "title": "Error Analysis",
      "collapsed": false
    },
    {
      "id": 31,
      "gridPos": {
        "x": 0,
        "y": 32,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "title": "4xx Errors by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\",status=~\"4..\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 32,
      "gridPos": {
        "x": 12,
        "y": 32,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "title": "5xx Errors by Service",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (rate(http_server_requests_seconds_count{job=~\"$service\",status=~\"5..\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}
